<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.feed.index.FeedIndexFragment">

    <androidx.recyclerview.widget.RecyclerView

        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/feed_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/feed_url"
        app:layout_constraintLeft_toLeftOf="@id/feed_url"
        android:layout_height="wrap_content"
        android:layout_width="200dp"
        android:layout_margin="5dp"
        app:layout_constraintTop_toBottomOf="@+id/feed_list"/>

    <com.google.android.material.button.MaterialButton
        app:layout_constraintTop_toBottomOf="@id/feed_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/feed_url"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="5dp"
        android:id="@+id/add_feed_button"
        android:text="Search"/>

</androidx.constraintlayout.widget.ConstraintLayout>