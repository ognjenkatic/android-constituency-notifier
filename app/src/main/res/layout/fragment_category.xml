<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.category.CategoryFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent" >

        <TextView
            android:id="@+id/category_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This is where you select the way you want to be notified of different categories. Hide for not seeing them at all, show for seeing, and alert for getting notifications outside of the app"
            app:layout_constraintTop_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
             />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/category_entry_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/category_desc"
             />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>